<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="1" author="luan.augusto">
        <createTable tableName="TB_RESPONSAVEL">

            <column name="ID" type="NUMBER" autoIncrement="${autoIncrement}">
                <constraints nullable="false"/>
            </column>

            <column name="NOME" type="varchar(80)">
                <constraints nullable="false"/>
            </column>

            <column name="EMAIL" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="DATA_NASCIMENTO" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="TB_RESPONSAVEL" columnNames="ID" constraintName="PK_RESPONSAVEL"/>
        <createSequence sequenceName="SQ_RESPONSAVEL" incrementBy="1" startValue="1"/>
    </changeSet>

</databaseChangeLog>
